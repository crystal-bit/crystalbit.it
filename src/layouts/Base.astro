---
import { site } from "../../config";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "@fontsource/quantico";
import "@fontsource/chakra-petch";
import "./base.scss";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- TODO: analytics  -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta property="og:site_name" content="Crystal Bit" />

    <slot name="title">
      <title>Crystal Bit</title>
      <!-- OpenGraph metadata -->
      <meta property="og:title" content={site.title} />
      <meta property="og:type" content="website" />
    </slot>

    <slot name="meta-image">
      <!-- TODO: check open graph metadata link img/logo works fine -->
      <meta property="og:image" itemprop="image" content="img/logo" />
    </slot>

    <slot name="meta">
      <!-- OpenGraph metadata (can be overriden by other pages) -->
      <meta name="description" content="Crystal Bit website" />
      <meta
        property="og:description"
        content="Crystal Bit - Crea videogiochi con software libero."
      />
    </slot>

    <!-- Dependencies -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i&display=swap"
      rel="stylesheet"
    />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="img/logo-transparent.png"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
      integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/syntax-highlight.css" />
  </head>

  <body>
    <!-- Dependencies -->
    <div class="body-container d-flex h-100 py-3 mx-auto flex-column">
      <Navbar />
      <div class="main-container">
        <!-- main slot -->
        <slot />
        <Footer />
      </div>
    </div>
  </body>
</html>
